{
  "name": "docx-to-html-converter",
  "version": "1.0.0",
  "description": "A Node.js + Express.js project to convert Microsoft Word documents to clean HTML",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist"
  },
  "keywords": ["docx", "html", "converter", "express", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "mammoth": "^1.6.0",
    "jsdom": "^22.1.0",
    "dompurify": "^3.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/jsdom": "^21.1.1",
    "@types/dompurify": "^3.0.2",
    "@types/node": "^20.4.5",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0"
  }
}
